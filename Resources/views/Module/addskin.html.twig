{% extends 'TerrificComposerBundle::basedialog.html.twig' %}

{% block content %}

<div class="sidebar">
    <ul>
        <li><a href="{{ path('composer_create_module') }}" class="icon module"><span>Module</span></a></li>
        <li class="active"><a href="{{ path('composer_add_skin') }}" class="icon skin"><span>Skin</span></a></li>
    </ul>
</div>
<div class="content">
    {% if app.session.hasFlash('notice') %}
    <div class="notice">
        {{ app.session.flash('notice') }}
    </div>
    {% endif %}
    <form novalidate="novalidate" action="{{ path('composer_add_skin') }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.module) }}
        {{ form_row(form.author) }}
        {{ form_row(form.name) }}
        <div class="radios">
            {{ form_widget(form.style) }}
        </div>

        {{ form_rest(form) }}

        <div class="actions">
            <input class="button" type="submit" name="finish" value="Finish" />
        </div>
    </form>
    <span class="loader"><img src="/bundles/terrificcomposer/images/loader.gif" alt="" /></span>
</div>

{% endblock %}