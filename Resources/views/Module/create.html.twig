{% extends 'TerrificComposerBundle::basedialog.html.twig' %}

{% block content %}

<div class="sidebar">
    <ul>
        <li class="active"><a href="{{ path('composer_create_module') }}" class="icon module"><span>Module</span></a></li>
        <li><a href="{{ path('composer_add_skin') }}" class="icon skin"><span>Skin</span></a></li>
    </ul>
</div>
<div class="content">
    {% if app.session.hasFlash('notice') %}
    <div class="notice">
        {{ app.session.flash('notice') }}
    </div>
    {% endif %}
    <form class="serialize" novalidate="novalidate" action="{{ path('composer_create_module') }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.name) }}
        <div class="radios">
        {{ form_widget(form.style) }}
        </div>

        {{ form_rest(form) }}

        <div class="actions">
            <input class="button primary" type="submit" name="create" value="Create" />
            <input class="button addSkin" type="button" name="skin" value="Add Skin" />
        </div>
    </form>
    <span class="loader"><img src="{{ asset('bundles/terrificcomposer/img/loader.gif') }}" alt="" /></span>
</div>

{% endblock %}

